<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- HUD Container - fixed size on left side -->
    <LinearLayout
        android:id="@+id/hudContainer"
        android:layout_width="650dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="250dp">

        <!-- Mode Toggle Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/modeTextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Text Edit"
                android:textSize="14sp"
                android:backgroundTint="#00AA00"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/modeCameraButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camera"
                android:textSize="14sp"
                android:enabled="false"
                android:alpha="0.5" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/captureButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/capture_button"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_button"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Content Area (Text Editor or Camera Preview) -->
        <FrameLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Text Editor (default visible) -->
            <EditText
                android:id="@+id/textEditor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0A0A0A"
                android:gravity="top|start"
                android:hint="@string/text_hint"
                android:padding="12dp"
                android:textColor="#00FF00"
                android:textColorHint="#006600"
                android:textSize="16sp"
                android:inputType="textMultiLine|textNoSuggestions"
                android:fontFamily="monospace"
                android:scrollbars="vertical" />

            <!-- Camera Preview (hidden for now, will be toggled) -->
            <!-- Future: Camera preview will go here -->

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
